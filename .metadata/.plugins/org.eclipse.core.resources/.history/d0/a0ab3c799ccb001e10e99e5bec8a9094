package com.algaworks.algafood.domain.repository;


import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.algaworks.algafood.domain.model.Grupo;
import com.algaworks.algafood.domain.model.Permissao;

public interface GrupoRepository extends CustomJpaRepository<Grupo, Long> {

	@Query("from permissao where grupo.id = :grupo and id = :permissao")
	Optional<Permissao> findById(@Param("grupo") Long grupoId,
			@Param("permissao") Long permissaoId);

	
	List<Permissao> findGrupoByPermissao(Grupo grupo);

}
